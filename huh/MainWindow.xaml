        <!--StackPanel for setting for charts-->
        <StackPanel Name="spSettingLabel" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Visible">
            <Label Margin="50,20,20,5"  FontSize="20" Content="Creating Diagramms" />
            <Grid>
