        <StackPanel Name="ChartSP" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Name="spPieChart" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
                <syncfusion:SfChart VerticalAlignment="Center" HorizontalAlignment="Center">
                    
                    
                    <syncfusion:SfChart.Series>
                        <syncfusion:PieSeries ExplodeIndex="5" EnableAnimation="True" ItemsSource="{Binding graphs}" XBindingPath="graphName" YBindingPath="graphValue" ShowTooltip="True">
                        </syncfusion:PieSeries>
                    </syncfusion:SfChart.Series>

                </syncfusion:SfChart>
            </StackPanel>

            <StackPanel Name="spPolarChart" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
                <syncfusion:SfChart>
                   
                    <syncfusion:SfChart.Series>
                        <syncfusion:PolarSeries DrawType="Area" ItemsSource="{Binding graphs}" XBindingPath="graphName" YBindingPath="graphValue" ShowTooltip="True">
                            
                        </syncfusion:PolarSeries>
                    </syncfusion:SfChart.Series>
                </syncfusion:SfChart>
            </StackPanel>

            <StackPanel Name="spHChart" Visibility="Collapsed">
                <syncfusion:SfChart >
                    <syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:CategoryAxis Header="Name" FontSize="14"/>
                    </syncfusion:SfChart.PrimaryAxis>

                    <syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:NumericalAxis Header="Value" FontSize="14"  Interval="2" />
                    </syncfusion:SfChart.SecondaryAxis>

                    <syncfusion:SfChart.Series>
                        <syncfusion:BarSeries EnableAnimation="True" ItemsSource="{Binding graphs}" XBindingPath="graphName" YBindingPath="graphValue" ShowTooltip="True">

                        </syncfusion:BarSeries>
                    </syncfusion:SfChart.Series>
                </syncfusion:SfChart>
            </StackPanel>

            <StackPanel Name="spVChart" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Bottom">

                <syncfusion:SfChart HorizontalAlignment="Center" VerticalAlignment="Bottom">

                    <syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:CategoryAxis Header="Name" FontSize="14"/>
                    </syncfusion:SfChart.PrimaryAxis>


                    <syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:NumericalAxis Header="Value" FontSize="14" Interval="2" />
                    </syncfusion:SfChart.SecondaryAxis>

                    <syncfusion:ColumnSeries  ItemsSource="{Binding graphs}"  XBindingPath="graphName" YBindingPath="graphValue" ShowTooltip="True" >
                    </syncfusion:ColumnSeries>

                </syncfusion:SfChart>

            </StackPanel>

            <StackPanel Name="spSChart" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
                <syncfusion:SfChart>
                    <syncfusion:SfChart.Series>
                        <syncfusion:SplineAreaSeries ItemsSource="{Binding graphs}"  XBindingPath="graphName" YBindingPath="graphValue" ShowTooltip="True">
                           
                        </syncfusion:SplineAreaSeries>
                    </syncfusion:SfChart.Series>
                </syncfusion:SfChart>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
